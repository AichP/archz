[colors]
;background = ${xrdb:color0:#222}
background = #88000000
background-alt = #263744
;foreground = ${xrdb:color7:#222}
foreground = #aaa
foreground-alt = #555
primary = #dfdfdf
secondary = #dfdfdf
alert = #DC322F

;[global/wm]
;margin-bottom = 5
[monitors]
monitor2 = ${env:Monitor:DP-5}
monitor1 = ${env:Monitor:DVI-D-0}

[bar/vga1top]
monitor = ${monitors.monitor1}
width = 100%
height = 24 
radius = 0
;fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 1
line-color = #f00

border-top-size= 10
border-left-size = 550
border-right-size = 550 
border-color = #00000000

padding-left = 3 
padding-right = 3

module-margin-left = 1
module-margin-right = 1

font-0 = NotoSans-Regular:size=12;2
font-1 = FontAwesome:pixelsize=14;3
font-2 = Material Design Icons:pixelsize=15;3 
font-3 = NotoSans-Regular:size=10:antialias=false;2
font-4 = Futura:size=12;3

modules-left = i3
modules-center = date
modules-right = volume powermenu

tray-position = right 
tray-detached = true 
tray-padding = 1 
tray-transparent = true
tray-offset-x = 300

tray-background = ${colors.background}

[bar/vga2top]
monitor = ${monitors.monitor2}
width = 100%
height = 24
radius = 0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 1
line-color = #f00

border-top-size = 10
border-left-size = 550
border-right-size = 550 
border-color = #00000000

padding-left = 3
padding-right = 3

module-margin-left = 1
module-margin-right = 1


font-0 = NotoSans-Regular:size=12:;2
font-1 = FontAwesome:pixelsize=14;3
font-2 = Material Design Icons:size=15;3 
font-3 = NotoSans-Regular:size=10:antialias=false;2
font-4 = Futura:size=12;3


modules-left = i3
modules-right = spotify spotifyprevious spotifyplaypause spotifynext

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

[module/i3]
type = internal/i3
pin-workspaces = true
enable-scroll = true
wrapping-scroll = true
format = <label-state> <label-mode>

ws-icon-0 = 0; 
ws-icon-1 = 1;
ws-icon-2 = 2;
ws-icon-3 = 3;
ws-icon-4 = 4;
ws-icon-5 = 5;
ws-icon-6 = 6;
ws-icon-7 = 7;
ws-icon-8 = 8;
ws-icon-9 = 9; 
 
ws-icon-default = X 
label-focused-font = 3
label-unfocused-font = 3
label-visible-font = 3
label-urgent-font = 3

label-mode = %mode% 
label-mode-padding = 1 
label-mode-background = #e60053

label-focused = %icon%  
label-focused-foreground = ${colors.primary}

label-focused-padding = 1

label-unfocused = %icon%
label-unfocused-padding = 1

label-visible = %icon%
label-visible-foreground = ${colors.primary}
label-visible-padding = 1

label-urgent = %icon%
label-urgent-foreground = #bd2c40
;label-urgent-background = #bd2c40
label-urgent-padding = 1

[module/cpu]
type = internal/cpu
interval = 1
padding-left = 3
padding-right = 3

format = CPU <label>

label = %percentage%%
label-foreground = ${colors.primary}


[module/memory]
type = internal/memory
interval = 1
format-prefix = 
format-prefix-foreground = ${colors.foreground-alt}
;format-underline = #4bffdc
label = RAM: %percentage_used%%


[module/eth]
type = internal/network
interface = ens33
interval = 3.0

;format-connected-underline = #55aa55
format-connected-prefix = ""
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 1

date = %d.%m.%Y
date-alt = %d.%m.%Y 

time = %A
time-alt = %H:%M:%S %A


label = %time% %date%

[module/volume]
type = internal/volume

format-volume = %{A3:/home/aich/.scripts/pavuCloseUnfocused.sh &:} <bar-volume> %{A}
click-left = exec pavucontrol &
label-muted = ""

bar-volume-width = 10 

bar-volume-gradient = false 
bar-volume-indicator = I
bar-volume-indicator-font = 5
bar-volume-indicator-foreground = ${colors.primary} 

bar-volume-fill = ─
bar-volume-fill-font = 4 
bar-volume-fill-foreground = ${colors.primary}
bar-volume-empty = ─
bar-volume-empty-font = 4

[module/pavolume]
type = custom/text
content = ""
click-left = sh ~/.scripts/pavuCloseUnfocused.sh
format-foreground = ${colors.primary}

[module/spotify]
type = custom/script
exec = sh ~/.config/polybar/spotify.sh
interval = 1
format-foreground = ${colors.primary}
click-left = exec i3-msg workspace 8

[module/spotifymenu]
type = custom/menu
expand-right = true

menu-0-0 = Browsers
menu-0-0-exec = menu-open-1
menu-0-2 = Multimedia
menu-0-2-exec = menu-open-2

menu-1-0 = Firefox
menu-1-0-exec = firefox &
menu-1-1 = Chromium
menu-1-1-exec = chromium &

menu-2-0 = Gimp
menu-2-0-exec = gimp &
menu-2-1 = Scrot
menu-2-1-exec = scrot &

[module/powermenu]
type = custom/menu
expand-right = false

format-spacing = 1

label-open = 
label-open-foreground = ${colors.primary}
label-close =  
label-close-foreground = ${colors.primary}
label-separator = " "
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = 
menu-0-0-exec = exec termite -e "sudo /home/aich/.scripts/rebootiIntoWin10.sh" --hold 
menu-0-1 = 
menu-0-1-exec = exec termite -e "sudo systemctl reboot --firmware-setup" --hold 
menu-0-2 = 
menu-0-2-exec = exec reboot
menu-0-3 = 
;menu-0-3-exec = exec termite -e "/home/aich/.scripts/lockAndSleep.sh "
menu-0-3-exec = exec sudo pm-suspend | /home/aich/.config/lock/lock.sh
menu-0-4 = 
menu-0-4-exec = exec shutdown now

[module/network]
type = custom/text
content = "  "

click-left = exec gnome-nettool &
content-foreground = ${colors.primary}
content-background = ${colors.background}

[module/spotifynext]
type = custom/script
exec = sh ~/.config/polybar/spotifynext.sh
click-left = exec xdotool key XF86AudioNext
content-foreground = ${colors.primary}

[module/spotifyplaypause]
type = custom/script
exec = sh ~/.config/polybar/spotifyplay.sh
click-left = exec xdotool key XF86AudioPlay
content-foreground = ${colors.primary}

[module/spotifyprevious]
type = custom/script
exec = sh ~/.config/polybar/spotifyprev.sh
click-left = exec xdotool key XF86AudioPrev
content-foreground = ${colors.primary}

[settings]
screenchange-reload = true

[module/wallpaper]
